{
  "name": "mq-file-uploader",
  "version": "1.0.0",
  "description": "A lightweight, customizable React file upload library with drag-drop, previews, and progress tracking",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "test": "vitest",
    "test:run": "vitest --run",
    "prepublishOnly": "npm run build && npm run test:run"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "optionalDependencies": {
    "axios": ">=1.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "axios": "^1.13.2",
    "jsdom": "^23.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-css-injected-by-js": "^3.3.1",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.1.0"
  },
  "keywords": [
    "react",
    "file-upload",
    "drag-drop",
    "uploader",
    "dropzone",
    "preview",
    "progress",
    "chunked-upload",
    "image-compression",
    "typescript"
  ],
  "author": "Mahmud Qudrati",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mahmudqudrati/mq-file-uploader"
  },
  "homepage": "https://github.com/mahmudqudrati/mq-file-uploader#readme",
  "bugs": {
    "url": "https://github.com/mahmudqudrati/mq-file-uploader/issues"
  }
}
